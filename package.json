{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/tractr/stack2021.git"
  },
  "workspaces": [
    "./packages/*",
    "./apps/*"
  ],
  "scripts": {
    "prebuild": "npm run prebuild:ngcc",
    "build": "lerna run build --scope '{@tractr/hapify-generate-config,@tractr/hapify-config}' && npm run generate && lerna run build",
    "build:watch": "lerna run build:watch",
    "prebuild:ngcc": "ngcc --properties es2015 browser module main --first-only --create-ivy-entry-points",
    "clean": "npm run clean:node_modules && npm run clean:dist && npm run clean:lock && npm run clean:package-lock",
    "clean:dist": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "clean:lock": "find ./{apps,packages} -name 'yarn.lock' -type d -prune -exec rm -rf '{}' +",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:package-lock": "find . -name 'package-lock.json' -type f -prune -exec rm -rf '{}' +",
    "generate": "lerna run generate",
    "lint": "lerna run --parallel lint",
    "lint:fix": "lerna run --parallel lint:fix",
    "postinstall": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "semantic-release": "semantic-release",
    "test": "lerna run --parallel test"
  },
  "commitlint": {
    "extends": [
      "@tractr/commit-config"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css,json}": "prettier --write",
    "*.{js,ts,json}": "eslint --fix"
  },
  "prettier": "@tractr/prettier-config",
  "jest": {
    "preset": "@tractr/jest-config"
  },
  "devDependencies": {
    "@hapify/cli": "^0.9.2",
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.15",
    "@prisma/client": "^2.22.1",
    "@qiwi/multi-semantic-release": "^3.13.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@tractr/commit-config": "^1.1.3",
    "@tractr/eslint-config": "^1.3.10",
    "@tractr/hapify-generate-config": "^1.0.4",
    "@tractr/jest-config": "^1.1.4",
    "@tractr/prettier-config": "^1.3.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/supertest": "^2.0.11",
    "eslint": "^7.24.0",
    "husky": "^6.0.0",
    "is-ci": "^3.0.0",
    "jest": "^26.6.3",
    "lerna": "4.0.0",
    "lint-staged": "^10.5.4",
    "nanoid": "3.1.22",
    "pinst": "^2.1.6",
    "postcss": "^8.2.15",
    "prettier": "^2.2.1",
    "prisma": "^2.21.0",
    "prisma-merge": "^0.2.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.2",
    "supertest": "^6.1.3",
    "ts-essentials": "^7.0.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file. See\n[Conventional Commits](https://conventionalcommits.org) for commit guidelines."
        }
      ],
      [
        "@semantic-release/npm",
        {
          "tarballDir": "pack"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": "pack/*.tgz",
          "successComment": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
