{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/tractr/stack2021.git"
  },
  "workspaces": [
    "./packages/*",
    "./apps/*"
  ],
  "scripts": {
    "build": "lerna run --parallel build",
    "clean:dist": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "clean:lib": "find . -name 'lib' -type d -prune -exec rm -rf '{}' +",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "generate": "lerna run --parallel generate",
    "postinstall": "is-ci || husky install",
    "lint": "lerna run --parallel lint",
    "lint:fix": "lerna run --parallel lint:fix",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "semantic-release": "semantic-release",
    "test": "lerna run --parallel test"
  },
  "commitlint": {
    "extends": [
      "@tractr/commit-config"
    ]
  },
  "prettier": "@tractr/prettier-config",
  "eslintConfig": {
    "extends": "@tractr",
    "rules": {}
  },
  "jest": {
    "preset": "@tractr/jest-config"
  },
  "devDependencies": {
    "@hapify/cli": "^0.9.0",
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.11",
    "@prisma/cli": "^2.16.0",
    "@tractr/commit-config": "^1.1.3",
    "@tractr/eslint-config": "^1.2.6",
    "@tractr/hapify-generate-config": "^0.0.1",
    "@tractr/jest-config": "^1.0.0",
    "@tractr/prettier-config": "^1.2.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@types/supertest": "^2.0.10",
    "eslint": "^7.19.0",
    "husky": "^5.0.6",
    "is-ci": "^2.0.0",
    "jest": "^26.6.3",
    "lerna": "3.22.1",
    "pinst": "^2.1.4",
    "prettier": "^2.2.1",
    "prisma-merge": "^0.2.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.3.7",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  }
}
