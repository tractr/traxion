{
  "name": "backend-starter",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/tractr/stack"
  },
  "license": "UNLICENSED",
  "author": "",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run generate && nest build",
    "generate": "rimraf src/generated && rimraf test/generated && rimraf mock/generated && npm run hpf:generate && npm run prisma:merge-schema && npm run prisma:format && npm run prisma:generate && npm run lint:prettier:fix",
    "hpf:generate": "npm run hpf:generate:config && hpf generate",
    "hpf:serve": "hpf serve",
    "hpf:generate:config": "hpf-generate-config",
    "lint": "npm run lint:tsc && npm run lint:prettier && npm run lint:eslint",
    "lint:eslint": "eslint \"{src,test}/**/*.ts\"",
    "lint:eslint:fix": "npm run lint:eslint -- --fix",
    "lint:fix": "npm run lint:tsc:fix && npm run lint:prettier:fix && npm run lint:eslint:fix",
    "lint:prettier": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:prettier:fix": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:tsc": "tsc --noEmit",
    "lint:tsc:fix": "npm run lint:tsc",
    "prisma": "prisma",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:merge-schema": "prisma-merge --baseFile=prisma/schemas/base.prisma --schemaFilePatterns=prisma/**/*.prisma --outputFile=prisma/schema.prisma --excludedFilePattern=prisma/**/schema.prisma",
    "prisma:migrate": "prisma migrate dev --preview-feature",
    "prisma:push": "prisma db push --preview-feature",
    "prisma:seed": "prisma db seed --preview-feature",
    "prisma:reset": "prisma reset",
    "start": "nest start",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:prod": "node dist/src/main",
    "test": "jest --config ./test/jest-unit-test.json",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "dependencies": {
    "@nestjs/common": "^7.6.11",
    "@nestjs/core": "^7.6.11",
    "@nestjs/graphql": "^7.9.8",
    "@nestjs/platform-express": "^7.6.11",
    "@nestjs/swagger": "^4.7.12",
    "@prisma/client": "^2.17.0",
    "@tractr/hapify-templates-nestjs-models": "1.1.1",
    "@tractr/hapify-templates-prisma": "1.1.0",
    "@tractr/nestjs-authentication": "1.3.1",
    "@tractr/nestjs-core": "1.2.1",
    "@tractr/nestjs-database": "1.1.0",
    "apollo-server-express": "^2.19.2",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dotenv": "8.2.0",
    "dotenv-expand": "5.1.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.2",
    "prisma": "^2.17.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@hapify/cli": "^0.9.0",
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.11",
    "@tractr/eslint-config": "^1.2.5",
    "@tractr/hapify-generate-config": "1.0.4",
    "@tractr/hapify-templates-nestjs-models-common": "1.1.0",
    "@tractr/hapify-templates-nestjs-models-rest": "1.1.0",
    "@tractr/nestjs-testing": "1.1.0",
    "@types/dotenv": "8.2.0",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.1.7",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@types/pg": "^7.14.10",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "faker": "^5.4.0",
    "get-bin-path": "^5.1.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "nanoid": "3.1.20",
    "pg": "^8.5.1",
    "prettier": "^2.2.1",
    "prisma-merge": "^0.2.0",
    "semantic-release": "^17.3.7",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  },
  "release": {
    "branch": "master",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file. See\n[Conventional Commits](https://conventionalcommits.org) for commit guidelines."
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
