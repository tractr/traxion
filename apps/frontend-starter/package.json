{
  "name": "frontend-starter",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/tractr/stack"
  },
  "license": "UNLICENSED",
  "author": "",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run generate && tsc --project tsconfig.build.json",
    "generate": "rimraf generated && npm run hpf:generate && npm run lint:prettier:fix",
    "hpf:generate": "npm run hpf:generate:config && hpf generate",
    "hpf:serve": "hpf serve",
    "hpf:generate:config": "hpf-generate-config",
    "lint": "npm run lint:tsc && npm run lint:prettier && npm run lint:eslint",
    "lint:eslint": "eslint \"{src,test}/**/*.ts\"",
    "lint:eslint:fix": "npm run lint:eslint -- --fix",
    "lint:fix": "npm run lint:tsc:fix && npm run lint:prettier:fix && npm run lint:eslint:fix",
    "lint:prettier": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:prettier:fix": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:tsc": "tsc --noEmit",
    "lint:tsc:fix": "npm run lint:tsc",
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "test": "jest --config ./test/jest-unit-test.json"
  },
  "dependencies": {
    "@tractr/hapify-templates-models": "1.1.1",
    "@tractr/hapify-templates-rest-client": "1.1.1",
    "@tractr/hapify-templates-rest-dtos": "1.1.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@hapify/cli": "^0.9.0",
    "@tractr/eslint-config": "^1.2.5",
    "@tractr/hapify-generate-config": "1.0.4",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "semantic-release": "^17.3.7",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  },
  "release": {
    "branch": "master",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file. See\n[Conventional Commits](https://conventionalcommits.org) for commit guidelines."
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
