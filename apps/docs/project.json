{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "docs",
  "projectType": "application",
  "sourceRoot": "apps/docs/src",
  "tags": [],
  "targets": {
    "build": {
      "dependsOn": [
        {
          "projects": "self",
          "target": "install"
        }
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx docusaurus build --out-dir ../../dist/apps/docs"],
        "cwd": "apps/docs"
      }
    },
    "deploy": {
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node deploy.ts",
        "cwd": "apps/docs"
      }
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npm i"],
        "cwd": "apps/docs"
      }
    },
    "serve": {
      "dependsOn": [
        {
          "projects": "self",
          "target": "install"
        }
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx docusaurus start -p 5000"],
        "cwd": "apps/docs"
      }
    }
  }
}
