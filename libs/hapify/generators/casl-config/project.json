{
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "name": "hapify-generators-casl-config",
  "projectType": "library",
  "sourceRoot": "libs/hapify/generators/casl-config/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "assets": ["libs/hapify/generators/casl-config/*.md"],
        "main": "libs/hapify/generators/casl-config/src/index.ts",
        "outputPath": "dist/libs/hapify/generators/casl-config",
        "tsConfig": "libs/hapify/generators/casl-config/tsconfig.lib.json"
      },
      "outputs": ["{options.outputPath}"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/hapify/generators/casl-config/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "test": {
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      },
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "libs/hapify/generators/casl-config/jest.config.ts",
        "passWithNoTests": true
      },
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    },
    "update-peer-dependencies": {
      "executor": "@trxn/schematics:update-peer-dependencies",
      "options": {
        "packageJsonPath": "{workspaceRoot}/dist/libs/hapify/generators/casl-config/package.json"
      }
    }
  }
}
