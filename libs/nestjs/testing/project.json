{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/nestjs/testing/src",
  "tags": [
    "scope:nestjs"
  ],
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "assets": [
          "libs/nestjs/testing/*.md"
        ],
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "main": "libs/nestjs/testing/src/index.ts",
        "outputPath": "dist/libs/nestjs/testing",
        "packageJson": "libs/nestjs/testing/package.json",
        "tsConfig": "libs/nestjs/testing/tsconfig.lib.json",
        "updateBuildableProjectDepsInPackageJson": true
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/nestjs/testing/**/*.ts"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "libs/nestjs/testing/jest.config.ts",
        "passWithNoTests": true
      },
      "outputs": [
        "coverage/libs/nestjs/testing"
      ]
    }
  }
}
