// ------------------------------------------------

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output = "../../../../node_modules/.prisma/client"
  previewFeatures = ["clientExtensions"]
}

generator nestjsGraphql {
  provider = "prisma-nestjs-graphql"
  output = "../../../generated/nestjs-graphql/src/generated/prisma-nestjs-graphql"
  purgeOutput = true
  reExport = Single
  noAtomicOperations=true
  fields_Validator_from = "class-validator"
  fields_Validator_input = true
  useInputType_StringFilter_ALL = "string"
}

generator nestjsServices {
  provider = "hapify-prisma-nestjs-services-generator"
  output = "../../../generated/nestjs-modes-common/src/generated/prisma-nestjs-services"
}