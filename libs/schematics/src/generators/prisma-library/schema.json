{
  "$id": "PrismaLibrary",
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "properties": {
    "directory": {
      "alias": "d",
      "description": "A directory where the project is placed",
      "type": "string"
    },
    "name": {
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "description": "",
      "type": "string",
      "x-prompt": "What name would you like to use?"
    },
    "tags": {
      "alias": "t",
      "description": "Add tags to the project (used for linting)",
      "type": "string"
    }
  },
  "required": ["name"],
  "title": "",
  "type": "object"
}
