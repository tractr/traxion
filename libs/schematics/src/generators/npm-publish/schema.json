{
  "$id": "Npm Publish",
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "properties": {
    "access": {
      "description": "Registry access type (default to restricted)",
      "type": "string"
    },
    "project": {
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "description": "Nx project name",
      "type": "string",
      "x-prompt": "What project would you like to add publish feature ?"
    },
    "registry": {
      "description": "Registry url (default to https://npm.pkg.github.com)",
      "type": "string"
    },
    "repository": {
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "alias": "r",
      "description": "Repositoy url",
      "type": "string",
      "x-prompt": "What is the repository you use to host your code base nx workspace ?"
    },
    "skipInstall": {
      "default": false,
      "description": "Skip install",
      "type": "boolean"
    }
  },
  "required": [
    "project",
    "repository"
  ],
  "title": "",
  "type": "object"
}