NODE_ENV=development

# ------------------------------------------------
# Database
# ------------------------------------------------
POSTGRES_USER=username
POSTGRES_PASSWORD=password
POSTGRES_DB=<%= name %>
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_SCHEMA=public

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=${POSTGRES_SCHEMA}${POSTGRES_OPTIONS}

#---------------------------------------
# Authentication
#---------------------------------------
COOKIE_SECRET=secret
JWT_SECRET=secret

#---------------------------------------
# Api
#---------------------------------------
API_URL=http://localhost:4200/api
