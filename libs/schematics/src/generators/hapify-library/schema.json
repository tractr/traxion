{
  "$id": "TractrLibrary",
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "examples": [
    {
      "command": "g @trxn/schematics:library mylib --directory=myapp",
      "description": "Generate libs/myapp/mylib"
    }
  ],
  "properties": {
    "addSecondaryEndpoint": {
      "description": "Add secondary endpoint to the library",
      "type": "array"
    },
    "hapifyModelsJson": {
      "default": "hapify-models.json",
      "description": "Relative path from root workspace where the hapify models json file is located",
      "type": "string"
    },
    "hapifyTemplate": {
      "default": "",
      "description": "List of template to use in this library",
      "items": {
        "enum": [
          "angular-rext-client",
          "casl",
          "dbml",
          "models",
          "nestjs-models",
          "nestjs-graphql",
          "nestjs-models-common",
          "nestjs-models-rest",
          "prisma",
          "react-admin",
          "rest-dtos",
          "rext-client"
        ],
        "type": "string"
      },
      "type": "string",
      "x-prompt": {
        "items": [
          "angular-rext-client",
          "casl",
          "dbml",
          "models",
          "nestjs-models",
          "nestjs-graphql",
          "nestjs-models-common",
          "nestjs-models-rest",
          "react-admin",
          "rest-dtos",
          "rext-client"
        ],
        "message": "Which template your library will host?",
        "type": "list"
      }
    },
    "hapifyUseImportReplacements": {
      "default": true,
      "description": "Use import replacement for hapify models",
      "type": "boolean"
    },
    "importPath": {
      "description": "Import path of the library",
      "type": "string"
    },
    "name": {
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "description": "Library name",
      "type": "string"
    },
    "skipInstall": {
      "default": false,
      "description": "Skip installing dependencies",
      "type": "boolean"
    },
    "type": {
      "default": "angular",
      "description": "Library type",
      "items": {
        "enum": [
          "angular",
          "nest",
          "react"
        ],
        "type": "string"
      },
      "type": "string"
    },
    "useSecondaryEndpoint": {
      "default": true,
      "description": "Do not add secondary endpoint to the library",
      "type": "boolean"
    }
  },
  "title": "Create a Tractr library with hapify for Nx",
  "type": "object"
}