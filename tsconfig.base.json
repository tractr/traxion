{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@app/*": ["apps/pwa/src/app/*"],
      "@assets/*": ["apps/pwa/src/assets/*"],
      "@env/*": ["apps/pwa/src/environments/*"],
      "@generated/angular": ["libs/@generated/angular/src/index.ts"],
      "@generated/nestjs": ["libs/@generated/nestjs/src/index.ts"],
      "@generated/prisma": ["libs/@generated/prisma/src/index.ts"],
      "@generated/shared": ["libs/@generated/shared/src/index.ts"],
      "@tractr/angular-components": ["libs/angular/components/src/index.ts"],
      "@tractr/angular-tools": ["libs/angular/tools/src/index.ts"],
      "@tractr/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@tractr/commit-config": ["libs/config/commit/src/index.ts"],
      "@tractr/eslint-config": ["libs/config/eslint/src/index.ts"],
      "@tractr/hapify-config": ["libs/config/hapify/src/index.ts"],
      "@tractr/hapify-generate-config": [
        "libs/hapify/generate-config/src/index.ts"
      ],
      "@tractr/hapify-templates-angular-rext-client": [
        "libs/hapify/templates/angular-rext-client/src/index.ts"
      ],
      "@tractr/hapify-templates-dbml": [
        "libs/hapify/templates/dbml/src/index.ts"
      ],
      "@tractr/hapify-templates-models": [
        "libs/hapify/templates/models/src/index.ts"
      ],
      "@tractr/hapify-templates-nestjs-models": [
        "libs/hapify/templates/nestjs-models/src/index.ts"
      ],
      "@tractr/hapify-templates-nestjs-models-common": [
        "libs/hapify/templates/nestjs-models-common/src/index.ts"
      ],
      "@tractr/hapify-templates-prisma": [
        "libs/hapify/templates/prisma/src/index.ts"
      ],
      "@tractr/hapify-templates-rest-dtos": [
        "libs/hapify/templates/rest-dtos/src/index.ts"
      ],
      "@tractr/hapify-templates-rext-client": [
        "libs/hapify/templates/rext-client/src/index.ts"
      ],
      "@tractr/nestjs-authentication": [
        "libs/nestjs/authentication/src/index.ts"
      ],
      "@tractr/nestjs-core": ["libs/nestjs/core/src/index.ts"],
      "@tractr/nestjs-database": ["libs/nestjs/database/src/index.ts"],
      "@tractr/nestjs-rbac": ["libs/nestjs/rbac/src/index.ts"],
      "@tractr/nestjs-testing": ["libs/nestjs/testing/src/index.ts"],
      "@tractr/prettier-config": ["libs/config/prettier/src/index.ts"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "exclude": ["node_modules", "tmp"]
}
