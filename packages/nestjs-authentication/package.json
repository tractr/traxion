{
  "name": "@tractr/nestjs-authentication",
  "version": "1.3.5",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/tractr/stack"
  },
  "license": "UNLICENSED",
  "author": "",
  "main": "dist",
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:watch": "npm run build -- --watch",
    "generate": "rimraf src/generated && rimraf test/generated && npm run hpf:generate && npm run prisma:merge-schema && npm run prisma:format && npm run prisma:generate && npm run lint:prettier:fix",
    "hpf:generate": "npm run hpf:generate:config && hpf generate",
    "hpf:generate:config": "hpf-generate-config",
    "lint": "npm run lint:tsc && npm run lint:prettier && npm run lint:eslint",
    "lint:eslint": "eslint \"{src,test}/**/*.ts\"",
    "lint:eslint:fix": "npm run lint:eslint -- --fix",
    "lint:fix": "npm run lint:tsc:fix && npm run lint:prettier:fix && npm run lint:eslint:fix",
    "lint:prettier": "prettier --check \"src/**/*.ts\" ",
    "lint:prettier:fix": "prettier --write \"src/**/*.ts\"",
    "lint:tsc": "tsc --noEmit",
    "lint:tsc:fix": "npm run lint:tsc",
    "prepublishOnly": "npm run build",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:merge-schema": "prisma-merge --baseFile=prisma/schemas/base.prisma --schemaFilePatterns=prisma/**/*.prisma --outputFile=prisma/schema.prisma --excludedFilePattern=prisma/**/schema.prisma",
    "prisma:migrate": "prisma migrate dev --preview-feature",
    "start": "nest start",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:prod": "node dist/main",
    "test": "jest --config ./test/jest-unit-test.json",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.11",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.11",
    "@nestjs/graphql": "^7.9.8",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@tractr/nestjs-core": "1.4.0",
    "@tractr/nestjs-database": "1.1.0",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.6.11",
    "@tractr/hapify-templates-nestjs-models": "1.1.1",
    "@tractr/hapify-templates-prisma": "1.1.0",
    "@types/bcrypt": "^3.0.0",
    "@types/passport-jwt": "^3.0.4",
    "@types/passport-local": "^1.0.33"
  },
  "peerDependencies": {
    "@prisma/client": "^2.17.0"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  }
}
